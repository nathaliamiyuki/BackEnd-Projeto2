<div class="ticket-details">
    <h2>Detalhes do Ingresso</h2>
    
    <div class="ticket-info">
        <h3>{{ticket.TicketType.name}}</h3>
        <div class="info-grid">
            <div class="info-item">
                <span class="label">Quantidade:</span>
                <span class="value">{{ticket.quantity}}</span>
            </div>
            <div class="info-item">
                <span class="label">Valor Unit√°rio:</span>
                <span class="value">R$ {{ticket.TicketType.price}}</span>
            </div>
            <div class="info-item">
                <span class="label">Valor Total:</span>
                <span class="value">R$ {{ticket.totalPrice}}</span>
            </div>
            <div class="info-item">
                <span class="label">Data da Compra:</span>
                <span class="value">{{formatDate ticket.purchaseDate}}</span>
            </div>
        </div>
    </div>

    <a href="/tickets" class="btn btn-secondary">Voltar</a>
</div>